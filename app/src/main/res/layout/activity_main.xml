<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/vertical_liner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_700"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="LinerText1"
            android:background="@color/purple_200"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="LinerText2"
            android:background="@color/purple_200"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="LinerText3"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/horizontal_liner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_200"
        android:orientation="horizontal"
        android:paddingTop="45dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/vertical_liner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="LinerText4"
            android:background="@color/purple_200"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="LinerText5"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="LinerText6"
            android:background="@color/purple_200"
            />

    </LinearLayout>


    <TextView
        android:id="@+id/main_title_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Hello World."
        android:textSize="40sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/color_change_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="色変え"
        android:textAllCaps="false"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/main_title_text"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/text_change_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="文字変え"
        android:textAllCaps="false"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/main_title_text"
        app:layout_constraintStart_toEndOf="@id/color_change_button"
        />

    <Button
        android:id="@+id/text_visible_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="非表示"
        android:textAllCaps="false"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/main_title_text"
        app:layout_constraintStart_toEndOf="@id/text_change_button"
        />

    <Button
        android:id="@+id/reverse_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="もとに戻す"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/text_change_button"
        app:layout_constraintStart_toEndOf="@id/color_change_button"
        />

    <View
        android:id="@+id/border"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/reverse_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <!-- 0dpは残りの幅めいっぱいを表す（枠組み系） -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/reverse_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/countText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="40dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <!--
        layout_constraintHorizontal_chainStyleで残り幅を平均的に分割して配置できたりする
        -->
        <Button
            android:id="@+id/plus_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            app:layout_constraintTop_toBottomOf="@+id/countText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/minus_button"
            app:layout_constraintHorizontal_chainStyle="spread"
            />

        <Button
            android:id="@+id/minus_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            app:layout_constraintStart_toEndOf="@+id/plus_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/countText"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>